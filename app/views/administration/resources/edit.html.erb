<%= content_for(:page_title, "Editer une resource") %>
<% set_back_link("Retourner Ã  la liste des resources", administration_resource_path) %>

<div class="max-w-4xl mx-auto sm:px-6 lg:px-8 mb-12">
  <div class="flex flex-col">
    <%= form_for(@resource, url: administration_resource_path(@resource), method: :patch) do |f| %>
      <div class="field">
        <label for="name">Nom</label>
        <%= f.text_field :name, placeholder: "Nom", class: 'appearance-none block w-full text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
      <div class="field">
        <label for="description">Description</label>
        <%= f.text_field :description, placeholder: "Description", class: 'appearance-none block w-full text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
      <div class="field">
        <label for="url">URL</label>
        <%= f.text_field :url, placeholder: "https://youtube.com", class: 'appearance-none block w-full text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
      <div class="field">
        <input type="submit" name="" value="Enregistrer", class='btn-green'>
      </div>
    <% end %>
  </div>
</div>
